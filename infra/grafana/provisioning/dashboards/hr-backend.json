{
  "id": null,
  "title": "HR Backend Metrics",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Requests per Second",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "{{method}} {{uri}}"
        }
      ],
      "lines": true
    },
    {
      "type": "graph",
      "title": "System CPU Usage",
      "targets": [
        { "expr": "system_cpu_usage", "legendFormat": "CPU Usage" }
      ]
    },
    {
      "type": "graph",
      "title": "JVM Memory Used (bytes)",
      "targets": [
        { "expr": "jvm_memory_used_bytes", "legendFormat": "{{area}}" }
      ]
    }
  ]
}
